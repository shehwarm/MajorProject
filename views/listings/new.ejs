<% layout("layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
      
      <!-- Title -->
      <div class="col-12">
        <label class="form-label">Title</label>
        <input name="listing[title]" type="text" class="form-control" placeholder="Enter title" required />
      </div>

      <!-- Description -->
      <div class="col-12">
        <label class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" rows="3" placeholder="Enter description"></textarea>
      </div>

      <!-- Image Upload -->
      <div class="col-12 col-md-6">
        <label class="form-label">Upload Image</label>
        <input name="listing[image]" type="file" class="form-control" />
        required
      </div>

      <!-- Price -->
      <div class="col-6 col-md-3">
        <label class="form-label">Price (â‚¹)</label>
        <input name="listing[price]" type="number" class="form-control" placeholder="0" min="0" required />
      </div>

      <!-- Country -->
      <div class="col-6 col-md-3">
        <label class="form-label">Country</label>
        <input name="listing[country]" type="text" class="form-control" placeholder="Country" required />
      </div>

      <!-- Location -->
      <div class="col-12">
        <label class="form-label">Location</label>
        <input name="listing[location]" type="text" class="form-control" placeholder="City, State" required />
      </div>

      <!-- Submit Button -->
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Add</button>
      </div>

    </form>
  </div>
</div>
